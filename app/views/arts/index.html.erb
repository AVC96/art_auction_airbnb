
<%# build home page - then build index page for the art and then the show page/ favourites %>
<%# ERB  %>
 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Artlantis | Art rental platform</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
  <%= stylesheet_link_tag "application", media: "all" %>
    </head>
  <body>
    <div class="art-container">
      <% @arts.each do |art| %>
        <div class="art-border-container">
        <%= image_tag "art 1"%>
        <%= image_tag "art 2"%>
        <%= image_tag "art 3"%>
          <img src="art 1.jpg" alt="Art 1">
          <img src="art 2.jpg" alt="Art 2">
          <img src="art 3.jpg" alt="Art 2">
          <div class="art_text">
            <h3><%= art.description %></h3>
            <h3><%= art.cost %></h3>
          </div>
        </div>
      <% end %>
    </div>
  </body>
  </html>
